# Configuración específica para entorno de desarrollo
DEBUG=true
LOG_LEVEL=DEBUG

# Configuración de login para desarrollo
LOGIN_MAX_ATTEMPTS=10
LOGIN_LOCKOUT_MINUTES=5
LOGIN_RATE_LIMIT_REQUESTS=20
LOGIN_RATE_LIMIT_WINDOW_MINUTES=10

# CORS más permisivo en desarrollo
CORS_ORIGINS=http://localhost,http://localhost:8080,http://127.0.0.1,http://127.0.0.1:8080, http://localhost:8081

# Token expiration más largo en desarrollo
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Configuración de archivos optimizada para desarrollo
ALLOWED_FILE_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
MAX_FILE_SIZE_MB=10

# Entorno de ejecución
ENVIRONMENT=development
