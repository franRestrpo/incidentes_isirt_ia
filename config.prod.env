# Configuración específica para entorno de producción
DEBUG=false
LOG_LEVEL=WARNING

# Configuración de login más restrictiva en producción
LOGIN_MAX_ATTEMPTS=3
LOGIN_LOCKOUT_MINUTES=30
LOGIN_RATE_LIMIT_REQUESTS=5
LOGIN_RATE_LIMIT_WINDOW_MINUTES=15

# CORS más restrictivo en producción
CORS_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# Token expiration más corto en producción por seguridad
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Configuración de archivos optimizada para producción
ALLOWED_FILE_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
MAX_FILE_SIZE_MB=5